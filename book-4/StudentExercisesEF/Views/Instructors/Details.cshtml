@model StudentExercisesEF.Models.Instructor

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Instructor</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.FirstName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.FirstName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.LastName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.LastName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.SlackHandle)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.SlackHandle)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Cohort)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Cohort.Name)
        </dd>
    </dl>

    <dl>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Cohort.Students)
        </dt>
        <dd class="col-sm-10">
            <table class="table">
                <tr>
                    <th>First Name</th>
                    <th>Last Name</th>
                    <th>Slack Handle</th>

                </tr>
                @foreach (var item in Model.Cohort.Students)
                {
            <tr>
                <td>
                    <a asp-controller="Students" 
                       asp-action="Details" 
                       asp-route-id="@item.Id">@Html.DisplayFor(modelItem => item.FirstName)</a>

                </td>
                <td>
                    <a asp-controller="Students"
                       asp-action="Details"
                       asp-route-id="@item.Id">@Html.DisplayFor(modelItem => item.LastName)</a>
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.SlackHandle)
                </td>

            </tr>
                }
            </table>
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.Id">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
