@model StudentExercisesEF.Models.ViewModels.CohortReportViewModel


@{
    ViewData["Title"] = "Reports";
}

<h1>Reports</h1>
<form asp-action="Report" method="get">
    <div class="row">
        <div class="col-md-4">

            <div class="form-group">
                <label class="control-label">Select a Cohort to View the Report</label>
                <select asp-for="selectedCohortId" class="form-control" asp-items="@Model.Cohorts">
                    <option value="" disabled selected>Select A Cohort...</option>

                </select>
                <input type="submit" value="Submit" class="btn btn-primary" />


            </div>
            </div>
        </div>
</form>
    <h4>Top Exercises</h4>
    <dd class="col-sm-10">
        <table class="table">
            <tr>
                <th>Exercise Name</th>
                <th>Programming Language</th>
            </tr>
            @foreach (var item in Model.TopThreeExercise)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Exercise.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Exercise.Language)
                    </td>

                </tr>
            }
        </table>
    </dd>




    <h4>Busy Students</h4>
    <dd class="col-sm-10">
        <table class="table">
            <tr>
                <th>First Name</th>
                <th>Last Name</th>
                <th>Slack Handle</th>
            </tr>
            @foreach (var item in Model.BusyStudents)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.FirstName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.LastName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.SlackHandle)
                    </td>
                </tr>
            }
        </table>
    </dd>


    <h4>Lazy Students</h4>
    <dd class="col-sm-10">
        <table class="table">
            <tr>
                <th>First Name</th>
                <th>Last Name</th>
                <th>Slack Handle</th>
            </tr>
            @foreach (var item in Model.LazyStudents)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.FirstName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.LastName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.SlackHandle)
                    </td>
                </tr>
            }
        </table>
    </dd>

