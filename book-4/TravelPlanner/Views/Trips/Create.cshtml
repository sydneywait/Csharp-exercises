@model TravelPlanner.Models.ViewModels.TripViewModel


@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Trip</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="trip.Name" class="control-label"></label>
                <input asp-for="trip.Name" class="form-control" />
                <span asp-validation-for="trip.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="trip.StartDate" class="control-label"></label>
                <input asp-for="trip.StartDate" class="form-control" />
                <span asp-validation-for="trip.StartDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="trip.EndDate" class="control-label"></label>
                <input asp-for="trip.EndDate" class="form-control" />
                <span asp-validation-for="trip.EndDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="selectedLocations" class="control-label"></label>
                <select multiple asp-for="selectedLocations" class="form-control" asp-items="@Model.Locations"></select>
            </div>
            <div class="form-group">
                <label asp-for="selectedClients" class="control-label"></label>
                <select multiple asp-for="selectedClients" class ="form-control" asp-items="@Model.Clients"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
